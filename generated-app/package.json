{
  "name": "canopy",
  "private": true,
  "workspaces": [
    "shared",
    "backend",
    "frontend",
    "infrastructure"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
